{
  "types": {
    "byte": {"c_type": "int8_t"},
    "ubyte": {"c_type": "uint8_t"},
    "word": {"c_type": "int16_t"},
    "uword": {"c_type": "uint16_t"},
    "dword": {"c_type": "uint32_t"},
    "udword": {"c_type": "uint32_t"},
    "string": {"c_type": "char*"},
    "callback": {"c_type": "void*"}
  },
  "roles": {
    "simple": ["byte", "ubyte", "word", "uword", "dword", "udword"],
    "fixed": ["string", "byte", "ubyte", "word", "uword", "dword", "udword"],
    "factor": ["byte", "ubyte", "word", "uword", "dword", "udword"],
    "callback": ["callback"]
  },
  "controls": {
    "simple": ["click", "position"],
    "fixed": ["click", "position"],
    "factor": ["click", "position"],
    "callback": []
  },
  "navigation_rules": {
    "click": {
      "allowed_navigate": ["cyclic"],
      "default": "cyclic"
    },
    "position": {
      "allowed_navigate": ["limit", "cyclic"],
      "default": "limit"
    }
  },
  "role_rules": {
    "simple": {
      "allowed_controls": ["click", "position"],
      "click": {
        "purpose": "change_value",
        "navigate": "cyclic",
        "required": false
      },
      "position": {
        "purpose": "change_value",
        "navigate": "limit",
        "required": false
      }
    },
    "fixed": {
      "allowed_controls": ["click", "position"],
      "click": {
        "purpose": "change_index",
        "navigate": "cyclic",
        "required": false
      },
      "position": {
        "purpose": "change_index",
        "navigate": "cyclic",
        "required": false
      }
    },
    "factor": {
      "allowed_controls": ["click", "position"],
      "click": {
        "purpose": "change_factor_index",
        "navigate": "cyclic",
        "required": true
      },
      "position": {
        "purpose": "change_value",
        "navigate": "limit",
        "required": true
      }
    },
    "callback": {
      "allowed_controls": [],
      "external_callbacks": ["click_cb", "position_cb", "display_cb"]
    }
  }
}