{
    "types": {
        "boolean": {
            "c_type": "bool",
            "min": false,
            "max": true
        },
        "byte": {
            "c_type": "int8_t",
            "min": -128,
            "max": 127
        },
        "ubyte": {
            "c_type": "uint8_t",
            "min": 0,
            "max": 255
        },
        "word": {
            "c_type": "int16_t",
            "min": -32768,
            "max": 32767
        },
        "uword": {
            "c_type": "uint16_t",
            "min": 0,
            "max": 65535
        },
        "dword": {
            "c_type": "int32_t",
            "min": -2147483648,
            "max": 2147483647
        },
        "udword": {
            "c_type": "uint32_t",
            "min": 0,
            "max": 4294967295
        },
        "float": {
            "c_type": "float",
            "min": -3.4e38,
            "max": 3.4e38
        },
        "string": {
            "c_type": "char *",
            "min_len": 1,
            "max_len": 32
        },
        "callback": {
            "c_type": "void (*)(void)"
        },
        "pointer": {
            "c_type": "void *"
        }
    },
    "roles": {
        "simple": [
            "boolean",
            "byte",
            "ubyte",
            "word",
            "uword",
            "dword",
            "udword",
            "float"
        ],
        "factor": [
            "byte",
            "ubyte",
            "word",
            "uword",
            "dword",
            "udword",
            "float"
        ],
        "fixed": [
            "string",
            "byte",
            "ubyte",
            "word",
            "uword",
            "dword",
            "udword",
            "float"
        ],
        "callback": [
            "callback"
        ],
        "pointer": [
            "pointer"
        ]
    },
    "role_rules": {
        "simple": {
        "allowed_controls": ["click", "position"],
        "click": {
            "purpose": "change_value",
            "navigate": "cyclic",
            "required": false
        },
        "position": {
            "purpose": "change_value", 
            "navigate": "limit",
            "required": false
        }
        },
        "fixed": {
        "allowed_controls": ["click", "position"],
        "click": {
            "purpose": "change_index",
            "navigate": "cyclic",
            "required": false
        },
        "position": {
            "purpose": "change_index",
            "navigate": "cyclic", 
            "required": false
        }
        },
        "factor": {
        "allowed_controls": ["click", "position"],
        "click": {
            "purpose": "change_factor_index",
            "navigate": "cyclic",
            "required": true
        },
        "position": {
            "purpose": "change_value",
            "navigate": "limit",
            "required": true
        }
        },
        "callback": {
        "allowed_controls": [],
        "external_callbacks": ["click_cb", "position_cb"]
        }
    },    
    "controls": {
        "click": ["simple", "factor", "click"],
        "position": ["simple", "factor", "fixed"]
    },
    "navigation_rules": {
        "click": {
            "allowed_navigate": ["cyclic"],
            "default": "cyclic"
        },
        "position": {
            "allowed_navigate": ["cyclic", "limit"],
            "default": "limit"
        }
    }        
}
