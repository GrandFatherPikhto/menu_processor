{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "config": {
      "type": "object",
      "additionalProperties": true
    },
    "menu": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/menuItem"
      }
    }
  },
  "required": ["menu"],
  "definitions": {
    "menuItem": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]+$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string"
        },
        "navigation": {
          "type": "string",
          "enum": ["cyclic", "limit", "false"]
        },
        "default": {
          "type": ["number", "boolean", "string"]
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "step": {
          "type": "number",
          "minimum": 0
        },
        "values": {
          "type": "array",
          "items": {
            "type": ["string", "number"]
          },
          "minItems": 1
        },
        "default_idx": {
          "type": "integer",
          "minimum": 0
        },        
        "factors": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 1
        },
        "str_true": {
          "type": "string"
        },
        "str_false": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/menuItem"
          }
        }
      },
      "required": ["id", "name"],
      "oneOf": [
        {
          "properties": {
            "items": {
              "type": "array",
              "minItems": 1
            }
          },
          "required": ["items"],
          "not": {
            "required": ["type"]
          }
        },
        {
          "required": ["type"],
          "not": {
            "required": ["items"]
          }
        }
      ]
    }
  }
}